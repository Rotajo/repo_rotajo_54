<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="lo54.projetlo54.core.entity" optimistic-lock="version" schema="lo54" table="client">
    <id name="id" type="int">
      <column name="ID_CLIENT"/>
      <generator class="assigned"/>
    </id>
    <property name="lastName" type="string">
      <column length="30" name="LASTNAME" not-null="true"/>
    </property>
    <property name="firstName" type="string">
      <column length="30" name="FIRSTNAME" not-null="true"/>
    </property>
    <property name="address" type="string">
      <column length="100" name="ADDRESS" not-null="true"/>
    </property>
    <property name="phone" type="string">
      <column length="15" name="PHONE" not-null="true"/>
    </property>
    <property name="email" type="string">
      <column length="50" name="EMAIL"/>
    </property>
    <many-to-one name="courseSessionId" class="lo54.projetlo54.core.CourseSession"
            column="COURSE_SESSION_ID" unique="true" not-null="true"
            cascade="all" />
  </class>
</hibernate-mapping>
